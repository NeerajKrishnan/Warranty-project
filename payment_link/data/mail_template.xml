<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mail_template_data_payment_link" model="mail.template">
            <field name="name">Payment Link</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Payment Link for ${object.name}</field>
            <field name="email_from">${(object.invoice_user_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="email_to">${object.partner_id.email}</field>

            <field name="partner_to">${object.partner_id.id}</field>

            <field name="body_html" type="xml">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.partner_id.name}<br/><br/>
        Thank you for Invoicing.
        Here is your payment link<br></br>
${object.link}



    </p>
</div>
</field>

        </record>
</odoo>